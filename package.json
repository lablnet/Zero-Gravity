{
    "name": "zero-gravity",
    "displayName": "Zero Gravity",
    "description": "Monitor your AI lift capacity and quotas in real-time.",
    "version": "0.0.2",
    "publisher": "local",
    "engines": {
        "vscode": "^1.80.0"
    },
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "antigravity-quotas",
                    "title": "Zero Gravity",
                    "icon": "$(rocket)"
                }
            ]
        },
        "views": {
            "antigravity-quotas": [
                {
                    "id": "quota-view",
                    "name": "Orbital Status"
                },
                {
                    "type": "webview",
                    "id": "quota-dashboard",
                    "name": "Gravity Analytics"
                }
            ]
        },
        "commands": [
            {
                "command": "quota-view.refreshEntry",
                "title": "Refresh Quotas",
                "icon": "$(refresh)"
            }
        ],
        "configuration": {
            "title": "Zero Gravity",
            "properties": {
                "zeroGravity.showInStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show the lowest remaining quota in the status bar."
                },
                "zeroGravity.refreshInterval": {
                    "type": "number",
                    "default": 5,
                    "description": "How often to refresh quotas automatically (in minutes)."
                }
            }
        },
        "menus": {
            "view/title": [
                {
                    "command": "quota-view.refreshEntry",
                    "when": "view == quota-view",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "typescript": "^5.1.3",
        "@vscode/vsce": "^2.19.0"
    }
}